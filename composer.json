{
    "name": "knorkfork/cutlery-app",
    "description": "Minimalist light-weight PHP framework.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Luka Knezic",
            "email": "looka1998+packagist@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Cutlery\\": "packages/cutlery-framework/src/",
            "Cutlery\\Db\\": "packages/cutlery-db-postgres/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cutlery\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.69",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0"
    },
    "require": {
        "php": ">=8.2",
        "knorkfork/load-environment": "^1.0",
        "symfony/yaml": "^7.3"
    },
    "scripts": {
        "post-create-project-cmd": ["@php bin/installer post-create"],
        "test": "phpunit",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "stan": "phpstan analyse"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
